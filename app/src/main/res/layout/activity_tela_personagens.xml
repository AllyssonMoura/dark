<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaPersonagens">

    <ScrollView
        android:id="@+id/svpersonagens"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <LinearLayout
            android:id="@+id/lvpersonagens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/tvpersonagens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/tvpersonagens"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="27sp"
                tools:text="@string/tvpersonagens" />

            <ImageView
                android:id="@+id/imgtriquetra"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                app:srcCompat="@drawable/triquetra" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/tva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/tva"
                android:textAlignment="viewStart"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                tools:text="@string/tva" />

            <LinearLayout
                android:id="@+id/lva"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/sppersonagensa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/sppersonagensa" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/tvb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/tvb"
                android:textAlignment="viewStart"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                tools:text="@string/tvb" />

            <LinearLayout
                android:id="@+id/lvb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/sppersonagensb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/sppersonagensb" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/tvori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/tvori"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/lvori"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/sppersonagensori"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/sppersonagensori" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <Button
                android:id="@+id/btsic"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border_button"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/btsic"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/bterit"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border_button"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/bterit"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>