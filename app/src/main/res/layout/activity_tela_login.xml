<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaLogin">

    <ScrollView
        android:id="@+id/svlogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <LinearLayout
            android:id="@+id/lvlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/tvlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/tvlogin"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="27sp"
                tools:text="@string/tvlogin" />

            <ImageView
                android:id="@+id/imgtriquetra"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                app:srcCompat="@drawable/triquetra" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp" />

            <EditText
                android:id="@+id/etemaillog"
                android:layout_width="400dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border_text"
                android:ems="10"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="@string/etemaillog"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/background_light"
                android:textColorHint="@android:color/background_light" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/etsenhalog"
                android:layout_width="400dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border_text"
                android:ems="10"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="@string/etsenhalog"
                android:inputType="textPassword"
                android:textColor="@android:color/background_light"
                android:textColorHint="@android:color/background_light" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="28dp" />

            <TextView
                android:id="@+id/tvfrase4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/tvfrase4"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textStyle="italic"
                tools:text="@string/tvfrase4" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="26dp" />

            <Button
                android:id="@+id/btlogando"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border_button"
                android:text="@string/btlog"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                tools:text="@string/btlog" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>